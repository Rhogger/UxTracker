@using UxTracker.Researchers.Web.Components.TextFields
@using UxTracker.Researchers.Web.Components.Forms
@using UxTracker.Researchers.Web.Enums

@page "/account/update-password"
@layout MainLayout
@inherits UpdatePasswordPage


<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex flex-column justify-center align-content-center gap-9 mud-height-full">
    <MudText Typo="Typo.h4" Align="Align.Center">Altere sua senha</MudText>
            
    <MudContainer MaxWidth="MaxWidth.ExtraSmall">
        <MudPaper Class="pa-6 rounded-lg" Outlined="true">
            <ValidateForm SubmitFunction="UpdatePasswordAsync" TextButton="Alterar senha">
                <PasswordTextField @bind-Password="@Request.Password" ValidatorType="ValidatorTypes.Validator"/>
            </ValidateForm>
        </MudPaper>
    </MudContainer>
</MudContainer>