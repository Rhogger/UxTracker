@page "/login"
@layout HeadlessLayout

<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex flex-column justify-center align-content-center gap-9 mud-height-full">
    <MudText Typo="Typo.h4" Align="Align.Center">Faça login no UxTracker</MudText>
            
    <MudContainer MaxWidth="MaxWidth.ExtraSmall" Class="d-flex flex-column gap-4">
        <MudPaper Class="pa-6 rounded-lg" Outlined="true">
            <MudForm Class="d-flex flex-column gap-7">
                <MudTextField ShrinkLabel T="string" Label="E-mail" InputType="InputType.Email" Variant="Variant.Filled"/>
                <MudTextField ShrinkLabel T="string" Label="Senha" InputType="InputType.Password" Variant="Variant.Filled"/>
                
                <div class="d-flex justify-center">
                    <MudButton
                        ButtonType="ButtonType.Submit"
                        Variant="Variant.Filled"
                        Color="Color.Primary"
                        Href="/"
                        Class="py-2 px-15"
                    >
                        Acessar
                    </MudButton>
                </div>
            </MudForm>
        </MudPaper>

        <MudPaper Class="px-4 py-7 rounded-lg" Outlined="true">
            <MudText Align="Align.Center">
                Já possui uma conta?
                <MudLink Href="/register" Style="font-weight: bold">Cadastre-se</MudLink>
            </MudText>
        </MudPaper>
    </MudContainer>
</MudContainer>