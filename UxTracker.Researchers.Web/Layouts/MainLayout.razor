@using UxTracker.Researchers.Web.Utils.Theme
@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@IsDarkMode" Theme="CustomTheme.Theme" />
<MudDialogProvider />
<MudPopoverProvider />
<MudSnackbarProvider />

<MudLayout Class="mud-height-full">
    <MudAppBar>
        <MudText Typo="Typo.h5" Style="font-weight: bold">UxTracker</MudText>

        <MudSpacer />

        <MudIconButton Icon="@Icon" OnClick="ChangeMode" Color="Color.Inherit" />
        <MudIconButton Icon="@Icons.Material.Filled.Person" Color="Color.Inherit" />
        <MudIconButton Icon="@Icons.Material.Filled.Logout" Color="Color.Inherit" />
    </MudAppBar>
    <MudMainContent Class="mud-height-full pa-0">
        @Body
    </MudMainContent>
</MudLayout>

@code
{
    private bool IsDarkMode = true;
    private string Icon = Icons.Material.Filled.WbSunny;
    private void ChangeMode()
    {
        if (IsDarkMode)
        {
            Icon = Icons.Material.Filled.DarkMode;
            IsDarkMode = false;
        }
        else
        {
            Icon = Icons.Material.Filled.WbSunny;
            IsDarkMode = true;
        }
    }
}
