@using UxTracker.Core.Contexts.Account.Enums
@using UxTracker.Web.Components.TextFields
@using UxTracker.Web.Components.Forms

@page "/recover/reset-password"
@layout HeadlessLayout
@inherits UpdatePasswordRecovery


<MudContainer 
    MaxWidth="MaxWidth.Small" 
    Class="d-flex flex-column justify-center align-center gap-9 h-full py-14">
    <MudText
        Typo="Typo.h4"
        Align="Align.Center"
        Class="headless-title">
        Altere sua senha
    </MudText>
            
    <MudContainer 
        MaxWidth="MaxWidth.ExtraSmall">
        <MudPaper 
            Class="pa-6 rounded-lg" 
            Outlined="true">
            <ValidateForm 
                SubmitFunction="UpdatePasswordAsync" 
                TextButton="Alterar senha"
                ButtonClass="py-2"
                IsBusy="IsBusy">
                <EmailTextField @bind-Email="@Request.Email"/>

                <PasswordTextField 
                    @bind-Password="@Request.Password" 
                    ValidatorType="ValidatorTypes.Validator"/>
            </ValidateForm>
        </MudPaper>
    </MudContainer>
</MudContainer>