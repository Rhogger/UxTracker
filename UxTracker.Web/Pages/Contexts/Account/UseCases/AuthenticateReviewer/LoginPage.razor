@using UxTracker.Web.Components.TextFields
@using UxTracker.Web.Components.Forms

@page "/reviewers/login"
@layout HeadlessLayout
@inherits Login

<MudContainer 
    MaxWidth="MaxWidth.Small"
    Class="d-flex flex-column justify-center align-center gap-9 h-full py-14">
    <MudText
        Typo="Typo.h4"
        Align="Align.Center"
        Class="headless-title">
        Acessar a pesquisa
    </MudText>
    
    <MudContainer 
        MaxWidth="MaxWidth.ExtraSmall" 
        Class="d-flex flex-column gap-4">
        <MudPaper
            Class="pa-6 rounded-lg"
            Outlined="true">
            <ValidateForm 
                SubmitFunction="SignInAsync" 
                TextButton="Acessar"
                IsBusy="IsBusy">
                <EmailTextField @bind-Email="Request.Email" IsRequired="IsRequired"/>

                <MudTextField
                    ShrinkLabel="true"
                    T="string"
                    Label="Código da avaliação"
                    Variant="Variant.Filled"
                    @bind-Value="Request.ResearchCode"/>
            </ValidateForm>
        </MudPaper>
        
        <MudPaper 
            Class="px-4 py-7 rounded-lg" 
            Outlined="true">
            <MudText 
                Align="Align.Center" 
                     Class="headless-text d-flex flex-wrap align-center justify-center gap-2">
                É novo no UxTracker?
                <MudLink
                    Href="/reviewers/register"
                    Style="font-weight: bold"
                    Class="headless-text">
                    Cadastre-se
                </MudLink>
            </MudText>
        </MudPaper>
    </MudContainer>
</MudContainer>