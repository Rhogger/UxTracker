@page "/not-found"
@layout HeadlessLayout

<MudContainer
    MaxWidth="MaxWidth.Medium"
    Class="d-flex justify-center align-center flex-column gap-6 pa-8 h-full">
    <MudText
        Typo="Typo.h2"
        Color="Color.Primary"
        Align="Align.Center"
        Class="title-2">
        Erro 404 - Página Não Encontrada
    </MudText>
    
    <MudText 
        Typo="Typo.body1"
        Align="Align.Center">
        Desculpe, a página que você está procurando não foi encontrada.
    </MudText>

    <AuthorizeView Roles="Researcher">
        <MudButton
            Href="/projects"
            Variant="Variant.Filled"
            Color="Color.Primary"
            Class="mt-4">
            Voltar para a página inicial
        </MudButton>
    </AuthorizeView>

    <AuthorizeView Roles="Reviewer">
        <MudButton
            Href="/reviewers/research"
            Variant="Variant.Filled"
            Color="Color.Primary"
            Class="mt-4">
            Voltar para a pesquisa
        </MudButton>
    </AuthorizeView>

    <AuthorizeView>
        <Authorized/>
        <NotAuthorized>
            <MudButton
                Href="/"
                Variant="Variant.Filled"
                Color="Color.Primary"
                Class="mt-4">
                Voltar para a página inicial
            </MudButton>
        </NotAuthorized>
    </AuthorizeView>
</MudContainer>