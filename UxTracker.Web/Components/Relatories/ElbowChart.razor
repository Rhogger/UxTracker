            },
            Tooltip = new Tooltip
            {
                Enabled = false
            },
            DataLabels = new DataLabels
            {
                OffsetY = -6d,
            },
            Grid = new Grid
            {
                BorderColor = "#e7e7e7",
                Yaxis = new GridYAxis
                {
                    Lines = new Lines
                    {
                        Show = true
                    }
                },
                Xaxis = new GridXAxis
                {
                    Lines = new Lines
                    {
                        Show = true
                    },
                },
            },
            Stroke = new Stroke
            {
                Curve = Curve.Straight, 
                Colors = ["#2DC8B8"]
            },
            Legend = new Legend
            {
                FontFamily = "Inter",
