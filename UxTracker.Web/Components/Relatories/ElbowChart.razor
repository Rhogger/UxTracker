@using ApexCharts
@using UxTracker.Core.Contexts.Research.DTOs
@using UxTracker.Core.Contexts.Research.ValueObjects

<div class="@ContainerClass">
    <ApexChart
        TItem="ElbowChartData"
        @ref="Ref"
        Options="@_options">
        <ApexPointSeries
            TItem="ElbowChartData"
            Items="ElbowData"
            Name="WCSS"
            SeriesType="SeriesType.Line"
            XValue="@(e => e.K)"
            YValue="@(e => Math.Round(e.WCSS))"/>
    </ApexChart>
</div>

