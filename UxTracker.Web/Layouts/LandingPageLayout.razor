@using UxTracker.Web.Utils.Theme
@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@IsDarkMode" Theme="CustomTheme.Theme" />
<MudSnackbarProvider />

<MudLayout Style="height: 100vh">
  <MudAppBar>
    <MudText Typo="Typo.h5" Style="font-weight: bold">UxTracker</MudText>

    <MudSpacer />

    <MudButton Href="/login" Variant="Variant.Text" Color="Color.Inherit">Login</MudButton>
    <MudButton Href="/register" Variant="Variant.Outlined" Color="Color.Inherit">Cadastre-se</MudButton>
    <MudIconButton Icon="@Icon" Color="Color.Inherit" OnClick="ChangeMode" />
  </MudAppBar>
  <MudMainContent Class="mud-height-full pa-0">
    @Body
  </MudMainContent>
</MudLayout>

@code {
  private bool IsDarkMode = true;
  private string Icon = Icons.Material.Filled.WbSunny;

  private void ChangeMode()
  {
    IsDarkMode = !IsDarkMode;
    Icon = IsDarkMode ? Icons.Material.Filled.DarkMode : Icons.Material.Filled.WbSunny;
  }

}
